/*Algoritmo 1: calcular a média de um aluno 
 - Obter as 3 notas de um aluno
 - calcular a aritimética
 - exibir média 
 - se média for maior ou igual a 7, o aluno foi aprovado
 - senão o anluno não foi aprovado
*/
int nota1 = 10;
int nota2 = 8;
int nota3 = 7;

int media = nota1 = nota2 + nota3 / 3;

Console.WriteLine ($"A média é: " + media);

if (media >=7)
{
    Console.WriteLine("O aluno foi aprovado");
}
else
{
    Console.WriteLine ("O aluno foi reprovado");
}
